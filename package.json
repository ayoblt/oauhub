{
  "name": "oauhub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:shared": "pnpm --filter @oauhub/shared dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:shared && pnpm build:backend && pnpm build:frontend",
    "build:shared": "pnpm --filter @oauhub/shared build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs postgres -f",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:psql": "docker compose exec postgres psql -U postgres -d oauhub",
    "migrate:dev": "pnpm --filter backend prisma migrate dev",
    "migrate:deploy": "pnpm --filter backend prisma migrate deploy",
    "prisma:studio": "pnpm --filter backend prisma studio",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next build"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
